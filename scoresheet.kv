WindowManager:
    Mylayoutone:
        id: screen1
    Mylayoutwo:
        id: screen2
    Mylayouthree:
        id: screen3


#Mylayoutwo:

<Mylayoutone>:
# Home page for profAna
    name: "home"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        BoxLayout:
            orientation: "vertical"
            size: 100, 50
            Label:
                text: "Welcome to Practice MCQs!"
                font_size: 25
                color: 0.92, 0.45, 0, 1
                #backgroud-md_bg_color: []
            Label:
                text: "Pick a region"
                font_size: 32
        GridLayout:
            cols: 2
            BoxLayout:
                Label:
                    text: "General"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "General")
            BoxLayout:       
                Label:
                    text: "Upper Limb"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Upper Limb")
            BoxLayout:
                Label:
                    text: "Lower Limb"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Lower Limb")
            BoxLayout:
                Label:
                    text: "Thorax"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Thorax")
            BoxLayout:
                Label:
                    text: "Abdomen"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Abdomen")
            BoxLayout:
                Label:
                    text: "Pelvis"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Pelvis")
            BoxLayout:
                Label:
                    text: "Perineum"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Perineum")
            BoxLayout:
                Label:
                    text: "Back"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Back")
            BoxLayout:
                Label:
                    text: "Head"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Head")
            BoxLayout:    
                Label:
                    text: "Neck"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Neck")
            BoxLayout:
                #spacing: "5dp"   
                Label:
                    text: "Face"
                    font_size: 20
                CheckBox:
                    id: region
                    group: "region"
                    on_active: root.checkbox_click(self, self.active, "Face")

            BoxLayout:    
                Label:
                    text: "Neuro-Anatomy"
                    font_size: 20
                Label:
                    text: "Coming Soon"
                    font_size: 10
                    color: 0.92, 0.45, 0, 1
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Start"
                font_size: "25dp"
                color: 0,1,0,1
            Label:
                text: "NB:"
                font_size: "20dp"
            Label:
                color: 1,0,0,1
                text: "start number, plus four must be a multiple of 5. one inclusive"
                
            TextInput:
                id: start_id
                write_tab: False
                multiline: False
                input_filter: "float"
                hint_text: "Number"
                size_hint: None, 1
                width: "80dp"
            Button:
                text: "Submit"
                size_hint: None, 1
                width: "50dp"
                on_press: root.on_submit()
                on_release:
                    app.root.current = "questions"
                    root.manager.transition.direction = "left"

        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Exit"
                id: btnExit
                size_hint: .1, None
                height: "50dp"
                pos_hint: {'center_x': .5}
                on_press: app.stop()
            Label:
                text: " ⚠ Disclaimer!!! ⚠"
                color: 0.92, 0.45, 0, 1
            Label:
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                text: "Data Gotten from Interactive Anatomy Text Series. Purchase textbook from the appropriate Authority to use this mobile app.\n \n App Developed for android by rabboni"
                color: 0,0,1,1
            


<Mylayoutwo>:
    # page 2
    name: "questions"
    selected_region: selected_region
    question1: question1
    question2: question2
    question3: question3
    question4: question4
    question5: question5
    score_id: score_id
    hide_see: hide_see

    on_leave: root.reset_checkbox()

    BoxLayout:
        id: zero
        size: root.width, root.height
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, .3
            Label:
                id: selected_region
                text: "{}".format(selected_region.text)
                font_size: 25
        BoxLayout:
            orientation: "vertical"
            #spacing: "10dp"
            Label:
                text: "Good luck!"
                color: 0, 1, 0, 1
                
        # Directons on how to answer
        GridLayout:
            size_hint: 1, .3
            cols: 3
            Label:
                text: "Question"
                font_size: 20
            Label:
                text: "True"
            Label:
                text: "False"

        # Question 1
        GridLayout:
            id: first
            size_hint: 1, .3
            cols: 3
            Label:
                id: question1
                text: "{}".format(question1.text)
                font_size: 15
            CheckBox:
                group: "0"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}T".format(question1.text))
            CheckBox:
                group: "0"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}F".format(question1.text))

        # Question 2
        GridLayout:
            id: second
            size_hint: 1, .3
            cols: 3
            Label:
                id: question2
                text: "{}".format(question2.text)
                font_size: 15
            CheckBox:
                group: "1"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}T".format(question2.text))
            CheckBox:
                group: "1"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}F".format(question2.text))
        
        # Question 3
        GridLayout:
            id: third
            cols: 3
            size_hint: 1, .3
            Label:
                id: question3
                text: "{}".format(question3.text)
                font_size: 15
            CheckBox:
                group: "2"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}T".format(question3.text))
            CheckBox:
                group: "2"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}F".format(question3.text))

        # Question 4
        GridLayout:
            id: fourth
            cols: 3
            size_hint: 1, .3
            Label:
                id: question4
                text: "{}".format(question4.text)
                font_size: 15
            CheckBox:
                group: "3"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}T".format(question4.text))
            CheckBox:
                group: "3"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}F".format(question4.text))
        
        # Question5
        GridLayout:
            id: fifth
            cols: 3
            size_hint: 1, .3
            Label:
                id: question5
                text: "{}".format(question5.text)
                font_size: 15
            CheckBox:
                group: "4"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}T".format(question5.text))
            CheckBox:
                group: "4"
                #allow_no_selection: False
                on_active: root.answer_click(self, self.active, "{}F".format(question5.text))

        BoxLayout:
            #orientation: "vertical"
            Label:
                id: regionClue
                text: ""
                size_hint: .4, None
                height: "50dp"
                color: 0,0,0,1
            Label:
                id: limit
                text: ""
                size_hint: .4, None
                height: "50dp"
                color: 0,0,0,1
            Button:
                text: "next"
                size_hint: .2, None
                height: "50dp"
                pos_hint: {'right': 1}
                on_press: root.on_next()
                on_press: root.hide_score()


        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "End"
                size_hint: .5, None
                height: "50dp"
                on_press: root.studyOver()

            Button:
                id: score_id
                text: "???"
                size_hint: .5, None
                height: "50dp"
            Button:
                text: "<<<"
                size_hint: .5, None
                height: "50dp"
                on_press: root.undo()
                on_release: root.see_score()
                
            Button:
                id: hide_see
                text: "See"
                size_hint: .5, None
                height: "50dp"
                on_press: root.see_score()

        BoxLayout:
            orientation: "vertical"
            Button:
                id: btnExit
                on_press: app.stop() 
                text: "Quit and Start Over"
                color: 0, 0, 0, 1
                size_hint: .3, None
                height: "50dp"
                pos_hint: {"center_x": .5}
                on_release:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"

        BoxLayout:
            orientation: "vertical"
            Label:
                text: " ⚠ Disclaimer!!! ⚠"
                color: 0.92, 0.45, 0, 1
            Label:
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                text: "Data Gotten from Interactive Anatomy Text Series. Purchase textbook from the appropriate Authority to use this mobile app.\n \n App Developed for android by rabboni"
                color: 0,0,1,1



# Final scoreSheet
